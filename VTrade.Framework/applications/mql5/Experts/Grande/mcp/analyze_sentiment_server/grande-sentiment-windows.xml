<?xml version="1.0" encoding="UTF-8"?>
<service>
  <id>GrandeSentimentMCP</id>
  <name>Grande Sentiment MCP Server</name>
  <description>Model Context Protocol server for sentiment analysis</description>
  <executable>C:\grande-sentiment\.venv\Scripts\python.exe</executable>
  <arguments>main.py</arguments>
  <workingdirectory>C:\grande-sentiment</workingdirectory>
  <logmode>rotate</logmode>
  <logpath>C:\grande-sentiment\logs</logpath>
  <log size="1024" period="7" />
  <onfailure action="restart" delay="10 sec" />
  <resetfailure>1 hour</resetfailure>
  <startmode>Automatic</startmode>
  <env name="MCP_TRANSPORT" value="streamable-http" />
  <env name="SENTIMENT_PROVIDER" value="openai_compat" />
  <env name="OPENAI_BASE_URL" value="http://localhost:11434/v1" />
  <env name="OPENAI_API_KEY" value="EMPTY" />
  <env name="OPENAI_MODEL" value="gpt-4o-mini" />
</service>
